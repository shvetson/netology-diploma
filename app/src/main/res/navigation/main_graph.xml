<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="ru.shvets.myapplication.ui.splash.SplashFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_pagersFragment"
            app:destination="@id/pagersFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/pagersFragment"
        android:name="ru.shvets.myapplication.ui.pagers.PagersFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_pagers" />
</navigation>