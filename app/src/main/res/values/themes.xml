<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>

        <!-- Custom -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Tabs Theme -->
    <style name="Theme.Tabs" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="tabIndicatorColor">@color/primaryLightColor</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Card -->
    <style name="Theme.Card" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/primaryColor</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- Card2 -->
    <style name="Theme.Card2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/secondaryLightColor</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="Theme.Hyperlink" parent="Theme.MyApplication">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/hyperlink_underline</item>
    </style>

